{
  "name": "magic-patterns-vite-template",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "main": "electron/main.cjs",
  "description": "NeoOptimize - Windows optimization UI",
  "author": "Sigit Profesional IT <gxmood@gmail.com>",
  "scripts": {
    "dev": "npx vite",
    "build": "npx vite build",
    "start:backend": "node backend/server.js",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "preview": "npx vite preview",
    "electron:dev": "electron .",
    "package:win": "electron-builder --win nsis portable",
    "package:win:installer": "electron-builder --win nsis",
    "package:win:portable": "electron-builder --win portable"
  },
  "dependencies": {
    "@emotion/react": "^11.13.3",
    "body-parser": "^1.20.3",
    "cors": "^2.8.5",
    "electron-updater": "^6.8.3",
    "express": "^4.21.2",
    "framer-motion": "^11.5.4",
    "lucide-react": "0.522.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.18",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "latest",
    "electron": "^26.0.0",
    "electron-builder": "^24.7.0",
    "eslint": "^8.50.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.1",
    "postcss": "latest",
    "tailwindcss": "3.4.17",
    "typescript": "^5.5.4",
    "vite": "^5.2.0"
  },
  "build": {
    "appId": "com.neooptimize.app",
    "productName": "NeoOptimize",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "backend/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "config",
        "to": "config",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "kicomav-master",
        "to": "kicomav-master",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "vendor/clamav-runtime",
        "to": "vendor/clamav-runtime",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "scripts/windows",
        "to": "scripts/windows",
        "filter": [
          "**/*"
        ]
      }
    ],
    "directories": {
      "buildResources": "build",
      "output": "release"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "asset/icon.png",
      "requestedExecutionLevel": "requireAdministrator"
    },
    "nsis": {
      "oneClick": true,
      "allowElevation": true,
      "perMachine": true,
      "runAfterFinish": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "NeoOptimize",
        "repo": "NeoOptimize"
      }
    ]
  }
}
